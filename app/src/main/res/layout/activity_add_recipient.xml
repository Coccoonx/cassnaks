<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f5f7"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center_horizontal" />
    <ScrollView
        android:id="@+id/scrollvieweditprofile"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/coazebackground"
        android:fillViewport="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/color_background"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_background"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_weight="99">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/firstName_add_recipient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="5"
                        android:hint="FirstName"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/lastName_add_recipient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="5"
                        android:hint="LastName"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/email_add_recipient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="5"
                        android:hint="Email"
                        android:inputType="textWebEmailAddress"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/phone_add_recipient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="5"
                        android:hint="Phone"
                        android:inputType="phone"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/countries"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="8dp"
                        android:drawSelectorOnTop="true"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/city_add_recipient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="5"
                        android:hint="City"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textSize="16sp"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/address_add_recipient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="5"
                        android:hint="Address"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textSize="16sp"
                        />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <Button
                android:layout_weight="1"
                android:id="@+id/button_add_recipient"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_extra_big"
                android:layout_marginBottom="@dimen/margin_standard"
                android:background="@drawable/corner_border_green"
                android:text="SAVE"
                android:textColor="#f2f5f7"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
