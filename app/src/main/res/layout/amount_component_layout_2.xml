<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="40"
        android:background="@drawable/corner_border_amount">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="Receiver get"
            android:textColor="@color/text_color_gray_dark_2"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="â‚¬"
            android:paddingLeft="@dimen/margin_short"
            android:singleLine="true"
            android:textColor="@color/colorPrimarylight"
            android:textSize="@dimen/text_size" />

        <TextView
            android:layout_toRightOf="@+id/currency"
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/texthinteuro"
            android:singleLine="true"
            android:textColor="@color/colorPrimarylight"
            android:textSize="25dp"
            android:background="#00000000"
            android:layout_marginLeft="@dimen/margin_extra_short"

            />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/corner_border_component_2"
        android:gravity="right"
        android:layout_weight="60"
        >
        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:drawSelectorOnTop="true"
            android:spinnerMode = "dropdown"
            android:popupBackground="@drawable/corner_border_component_2"
            android:gravity="left" />

    </LinearLayout>



</LinearLayout>