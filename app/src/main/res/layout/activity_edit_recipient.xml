<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center_horizontal" />
    <ScrollView
        android:id="@+id/scrollvieweditprofile"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_weight="99">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:theme="@style/TextLabel"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/firstName_edit_recipient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="5"
                        android:hint="First Name"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:singleLine="true"
                        android:textColorHint="@color/text_color_grey_dark"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:theme="@style/TextLabel"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/lastName_edit_recipient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="5"
                        android:hint="Last Name"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:singleLine="true"
                        android:textColorHint="@color/text_color_grey_dark"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:theme="@style/TextLabel"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/email_edit_recipient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="5"
                        android:hint="Email"
                        android:inputType="textWebEmailAddress"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:singleLine="true"
                        android:textColorHint="@color/text_color_grey_dark"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:theme="@style/TextLabel"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/phone_edit_recipient"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:ems="5"
                        android:hint="Phone"
                        android:inputType="phone"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:singleLine="true"
                        android:textColorHint="@color/text_color_grey_dark"
                        android:textColor="@color/textColorPrimary"
                        android:textSize="16sp" />
                </android.support.design.widget.TextInputLayout>

